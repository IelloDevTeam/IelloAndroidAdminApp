<resources>

    <!-- Stili utilizzati da vari elementi di MainActivity -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tema senza action bar, main -->
    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Rendeva tutti i controlli con questi colori, esempio un normale edit text su sfondo
             biano rendeva invisibile il focus sull'edit text -->
        <!-- <item name="colorControlNormal">@color/white</item> -->
        <!--<item name="colorControlActivated">@color/white</item> -->
    </style>

    <!-- Tema distinato alla barra di ricerca -->
    <style name="AppBarAddressSearchTheme" parent="AppTheme.AppBarOverlay">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- tema della SplashActivity, un'activity senza action bar nella quale viene visualizzato il
        logo dell'app -->
    <style name="SplashTheme" parent="NoActionBarTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>



</resources>
